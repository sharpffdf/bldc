    make clean
else
    
    GIT_VERSION=`$MAIN_PATH/gitVersion.sh`
    # default
    # touch conf_general.h
    make -j8 build_args='-DHW_SOURCE=\"hw_60.c\" -DHW_HEADER=\"hw_60.h\"'
    cp $MAIN_PATH/build/BLDC_4_ChibiOS.bin $MAIN_PATH/build/VESC_default_"${GIT_VERSION}".bin
    arm-none-eabi-objcopy -Oihex $MAIN_PATH/build/BLDC_4_ChibiOS.elf $MAIN_PATH/build/VESC_default_"${GIT_VERSION}".hex
    arm-none-eabi-size $MAIN_PATH/build/BLDC_4_ChibiOS.elf

    cp $MAIN_PATH/build/VESC_default_"${GIT_VERSION}".hex /home/lf/dev/tools/jlinkscript/appf405.hex
fi
popd > /dev/null 2>&1

